<div class="items-center px-20 mt-10">
  {{ input class="px-2 py-2 border border-gray-400 rounded" type="text" value=queryString placeholder="search games" }}
  <button class="py-2 px-4 mt-4block bg-indigo-600 rounded shadow-sm text-white" onclick={{action "searchQuery" queryString}}> Search</button>
</div>

<div class="mt-10 flex flex-col">
      <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
        <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
          <table class="min-w-full">
            <thead>
              <tr>
                <th class="px-6 py-3 border-b border-gray-300 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wide">
                  Name
                </th>
                <th class="px-6 py-3 border-b border-gray-300 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wide">
                  Title
                </th>
                <th class="px-6 py-3 border-b border-gray-300 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wide">
                  Status
                </th>
                <th class="px-6 py-3 border-b border-gray-300 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wide">
                  Role
                </th>
                <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wide">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white">
              {{#each (take 10 (sort-by "Rank:desc" this.gameUtils.searchQueryGames)) as |game| }}
              <tr>
                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                  <div class="flex items-center">                    
                    <div class="ml-4">
                      <div class="text-sm leading-5 font-medium text-gray-900">{{game.Rank}}</div>                      
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                  <div class="text-sm leading-5 text-gray-900"> {{game.Name}}</div>
                </td>
                <td class="px-6 px-4 whitespace-no-wrap border-b border-gray-200">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    {{game.Platform}}
                  </span>
                </td>
                <td class="px-6 px-4 whitespace-no-wrap border-b border-gray-200">
                  {{game.Year}}
                </td>
                <td class="px-6 px-4 whitespace-no-wrap border-b border-gray-200">
                  <a href="#" class="text-indigo-600 hover:text-indigo-900 focus:outline-none focus:underline">Edit</a>
                </td>
              </tr>
              {{/each}}              
            </tbody>
          </table>
        </div>
      </div>
  </div>
